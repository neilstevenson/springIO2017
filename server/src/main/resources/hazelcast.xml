<?xml version="1.0" encoding="UTF-8"?>
<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.8.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- Port 80 not 8080 -->
    <management-center enabled="true">http://localhost/mancenter</management-center>

    <network>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <member-list>
                    <member>127.0.0.1</member>
                </member-list>
            </tcp-ip>
        </join>
    </network>
    
    <map name="fibonacci">
		<entry-listeners>
            <entry-listener include-value="true" local="true">neil.demo.barcelona.MyMapListener</entry-listener>
		</entry-listeners>    	
    </map>
  
  	<!-- Predefine the cache, and turn on management center -->  
    <cache name="fibonacci">
    	<statistics-enabled>true</statistics-enabled>
  		<management-enabled>true</management-enabled>
  		
  		<cache-entry-listeners>
            <cache-entry-listener old-value-required="true" synchronous="true">
                <cache-entry-listener-factory class-name="neil.demo.barcelona.MyCacheListenerFactory"/>
            </cache-entry-listener>
        </cache-entry-listeners>
  	</cache>

</hazelcast>